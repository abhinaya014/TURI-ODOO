<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Vista Kanban Mejorada -->
    <record id="view_game_player_kanban_full" model="ir.ui.view">
      <field name="name">game.player.kanban.full</field>
      <field name="model">game.player</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_mobile o_kanban_card" sample="1">
          <field name="name"/>
          <field name="photo"/>
          <field name="player_id"/>
          <field name="level"/>
          <field name="coin_balance"/>
          <field name="total_matches"/>
          <field name="total_wins"/>
          <templates>
            <t t-name="kanban-box">
              <div class="o_kanban_card rounded shadow-sm">
                <div class="o_kanban_card_header d-flex align-items-center p-2">
                  <div class="o_kanban_image_fill rounded-circle me-2"
                       t-attf-style="background-image: url(#{record.photo.value ? 'data:image/png;base64,' + record.photo.value : '/web/static/img/user_menu_avatar.png'});">
                  </div>
                  <div class="o_kanban_card_title flex-grow-1">
                    <strong class="text-primary" t-esc="record.name.value"/>
                    <br/>
                    <span class="badge bg-secondary" t-esc="'ID: ' + record.player_id.value"/>
                  </div>
                </div>
                
                <div class="o_kanban_card_body p-3">
                  <div class="d-flex justify-content-between">
                    <span class="badge bg-info text-white"><i class="fa fa-star me-1"/> <t t-esc="record.level.value"/></span>
                    <span class="badge bg-success text-white"><i class="fa fa-coins me-1"/> <t t-esc="record.coin_balance.value"/></span>
                    <span class="badge bg-warning text-dark"><i class="fa fa-trophy me-1"/> <t t-esc="record.total_wins.value"/> / <t t-esc="record.total_matches.value"/></span>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Vista Tree Mejorada -->
    <record id="view_game_player_tree" model="ir.ui.view">
      <field name="name">game.player.tree</field>
      <field name="model">game.player</field>
      <field name="arch" type="xml">
        <tree decoration-info="level &lt; 10" decoration-warning="level &gt;= 10 and level &lt; 20" decoration-danger="level &gt;= 20">
          <field name="photo" widget="image" class="oe_avatar" options="{'size': [40, 40]}"/>
          <field name="name"/>
          <field name="level"/>
          <field name="coin_balance" widget="monetary"/>
          <field name="total_matches"/>
          <field name="total_wins"/>
          <field name="win_rate" widget="percentage"/>
        </tree>
      </field>
    </record>

    <!-- Vista Form Mejorada -->
    <record id="view_game_player_form" model="ir.ui.view">
      <field name="name">game.player.form</field>
      <field name="model">game.player</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="action_level_up" 
                    string="ðŸŽ® Level Up" 
                    type="object" 
                    class="btn btn-primary"
                    attrs="{'invisible': [('can_level_up', '=', False)]}"/>
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button name="action_view_matches" type="object" class="oe_stat_button" icon="fa-gamepad">
                <field name="total_matches" widget="statinfo" string="Matches"/>
              </button>
              <button name="action_view_achievements" type="object" class="oe_stat_button" icon="fa-trophy">
                <field name="total_wins" widget="statinfo" string="Wins"/>
              </button>
            </div>
            
            <div class="o_form_image">
              <field name="photo" widget="image" class="oe_avatar" options="{'size': [180, 180]}"/>
            </div>

            <div class="oe_title">
              <h1><field name="name" placeholder="Player Name"/></h1>
              <h2><field name="player_id" readonly="1" class="text-muted"/></h2>
            </div>

            <group>
              <field name="email" widget="email"/>
              <field name="password" password="True"/>
              <field name="can_level_up" invisible="1"/>
              <field name="level" widget="gauge" options="{'max_value': 100}"/>
              <field name="coin_balance" widget="monetary"/>
              <field name="win_rate" widget="percentage"/>
            </group>

            <notebook>
              <page string="Match History">
                <field name="match_stats_ids">
                  <tree>
                    <field name="match_id"/>
                    <field name="match_date"/>
                    <field name="match_type"/>
                    <field name="kills"/>
                    <field name="deaths"/>
                    <field name="score" widget="progressbar"/>
                    <field name="result" widget="badge"
                           decoration-success="result == 'win'"
                           decoration-danger="result == 'loss'"
                           decoration-warning="result == 'draw'"/>
                  </tree>
                </field>
              </page>
              <page string="Achievements">
                <field name="achievement_ids">
                  <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="date_earned"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>

          <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>
  </data>
</odoo>
