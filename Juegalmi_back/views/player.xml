<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- ***********************
         VISTAS PARA GAME.PLAYER
         *********************** -->

    <!-- Vista Kanban Mejorada de Jugadores -->
    <record id="view_game_player_kanban_full" model="ir.ui.view">
      <field name="name">game.player.kanban.full</field>
      <field name="model">game.player</field>
      <field name="arch" type="xml">
        <kanban class="oe_kanban_card">
          <field name="name"/>
          <field name="email"/>
          <field name="photo"/>
          <field name="player_id"/>
          <field name="level"/>
          <field name="coin_balance"/>
          <field name="total_matches"/>
          <field name="total_wins"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click kanban_player_card">
                <div class="kanban_player_avatar">
                  <t t-if="record.photo.value">
                    <img t-att-src="'data:image/png;base64,' + record.photo.value" class="kanban_player_img"/>
                  </t>
                  <t t-else="">
                    <img src="/web/static/img/user_menu_avatar.png" class="kanban_player_img_default"/>
                  </t>
                </div>
                <div class="kanban_player_info">
                  <div class="kanban_player_name" t-esc="record.name.value"/>
                  <div class="kanban_player_email" t-esc="record.email.value"/>
                  <div class="kanban_player_stats">
                    <span>ID:</span> <span t-esc="record.player_id.value"/>
                    <span>| Level:</span> <span t-esc="record.level.value"/>
                  </div>
                  <div class="kanban_player_coins">
                    <span>Coins:</span> <span t-esc="record.coin_balance.value"/>
                  </div>
                  <div class="kanban_player_matches">
                    <span>Matches:</span> <span t-esc="record.total_matches.value"/>
                    <span>| Wins:</span> <span t-esc="record.total_wins.value"/>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Vista Tree Mejorada de Jugadores -->
    <record id="view_game_player_tree" model="ir.ui.view">
      <field name="name">game.player.tree</field>
      <field name="model">game.player</field>
      <field name="arch" type="xml">
        <tree decoration-info="level &gt; 10">
          <field name="name"/>
          <field name="email"/>
          <field name="level"/>
          <field name="coin_balance"/>
          <field name="total_matches"/>
          <field name="total_wins"/>
        </tree>
      </field>
    </record>

    <!-- Vista Form Mejorada de Jugadores -->
    <record id="view_game_player_form" model="ir.ui.view">
      <field name="name">game.player.form</field>
      <field name="model">game.player</field>
      <field name="arch" type="xml">
        <form string="Game Player">
          <sheet>
            <group>
              <field name="photo" widget="image" class="oe_avatar" options="{'preview_image': 'photo'}"/>
            </group>
            <group>
              <field name="name"/>
              <field name="email"/>
              <field name="password" password="True"/>
            </group>
            <group>
              <field name="player_id" readonly="1"/>
              <field name="level"/>
              <field name="coin_balance" readonly="1"/>
            </group>
            <group>
              <field name="total_matches" readonly="1"/>
              <field name="total_wins" readonly="1"/>
            </group>
            <notebook>
              <page string="Matches">
                <field name="match_stats_ids">
                  <tree>
                    <field name="match_id"/>
                    <field name="kills"/>
                    <field name="deaths"/>
                    <field name="score"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>
