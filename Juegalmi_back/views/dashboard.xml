<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_game_dashboard" model="ir.ui.view">
            <field name="name">game.dashboard</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <kanban class="o_game_dashboard" create="false">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="total_matches"/>
                    <field name="total_wins"/>
                    <field name="coin_balance"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="container-fluid o_game_dashboard">
                                <!-- Header Stats -->
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="stat-card">
                                            <h3><field name="total_matches"/></h3>
                                            <p>Total Matches</p>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="stat-card">
                                            <h3><field name="total_wins"/></h3>
                                            <p>Total Wins</p>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="stat-card">
                                            <h3><field name="coin_balance"/></h3>
                                            <p>Coin Balance</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Charts -->
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="dashboard-card">
                                            <div class="dashboard-card-header">
                                                <h3>Performance Statistics</h3>
                                            </div>
                                            <div class="dashboard-card-body">
                                                <div t-att-id="'main-stats-' + record.id.raw_value" class="chart-container"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="dashboard-card">
                                            <div class="dashboard-card-header">
                                                <h3>Coin History</h3>
                                            </div>
                                            <div class="dashboard-card-body">
                                                <div t-att-id="'coin-history-' + record.id.raw_value" class="chart-container"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="dashboard-card">
                                            <div class="dashboard-card-header">
                                                <h3>Owned Skins</h3>
                                            </div>
                                            <div class="dashboard-card-body">
                                                <div t-att-id="'skins-chart-' + record.id.raw_value" class="chart-container"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- AcciÃ³n del Dashboard -->
        <record id="action_game_dashboard" model="ir.actions.act_window">
            <field name="name">Game Dashboard</field>
            <field name="res_model">game.player</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_game_dashboard"/>
        </record>

        <!-- MenÃº del Dashboard -->
        <menuitem id="menu_game_dashboard"
                  name="ðŸ“Š Dashboard"
                  parent="menu_game_api_root"
                  action="action_game_dashboard"
                  sequence="1"/>
    </data>
</odoo>