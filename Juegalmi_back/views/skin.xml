<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- ***********************
         VISTA KANBAN PARA SKINS
         *********************** -->
<record id="view_game_skin_kanban" model="ir.ui.view">
  <field name="name">game.skin.kanban</field>
  <field name="model">game.skin</field>
  <field name="arch" type="xml">
    <kanban>
      <field name="name"/>
      <field name="image"/>
      <field name="owned_by_players"/>
      <templates>
        <t t-name="kanban-box">
          <div class="oe_kanban_global_click"
               style="padding:15px; border-radius:10px; text-align:center; box-shadow:0 4px 8px rgba(0,0,0,0.2); background:#fff;">

            <!-- Imagen del skin (Grande) -->
            <div style="margin-bottom:15px;">
              <t t-if="record.image.value">
                <img t-att-src="'data:image/png;base64,' + record.image.value"
                     style="width:200px; height:200px; object-fit:cover; border-radius:10px;"/>
              </t>
              <t t-else="">
                <img src="/your_module/static/img/default_skin.png"
                     style="width:200px; height:200px; object-fit:cover; border-radius:10px; opacity:0.5;"/>
              </t>
            </div>

            <!-- Nombre del skin -->
            <div style="font-size:18px; font-weight:bold; color:#333;" t-esc="record.name.value"/>

            <!-- Cantidad de jugadores que tienen este skin -->
            <div style="margin-top:10px; font-size:14px; color:#555;">
              <strong>Jugadores:</strong>
              <t t-if="record.owned_by_players.value">
                <span t-esc="record.owned_by_players.value | count"/>
              </t>
              <t t-else="">0</t>
            </div>

          </div>
        </t>
      </templates>
    </kanban>
  </field>
</record>



    <!-- ***********************
         VISTA FORM PARA SKINS
         *********************** -->
<record id="view_game_skin_form" model="ir.ui.view">
  <field name="name">game.skin.form</field>
  <field name="model">game.skin</field>
  <field name="arch" type="xml">
    <form string="Game Skin">
      <sheet>
        <group>
          <field name="name"/>
        </group>
        <group>
          <field name="image" widget="image" class="oe_avatar"/>
        </group>
        <group>
          <field name="owned_by_players" widget="many2many_tags"/>
        </group>
      </sheet>
    </form>
  </field>
</record>


  </data>
</odoo>
