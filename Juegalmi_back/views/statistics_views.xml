            name="游늳 Progresi칩n"
            parent="menu_game_statistics_root"
            action="action_game_statistics_progression"
            sequence="2"/>

        <menuitem 
            id="menu_game_statistics_coins"
            name="游눯 Monedas"
            parent="menu_game_statistics_root"
            action="action_game_statistics_coins"
            sequence="3"/>

        <menuitem 
            id="menu_game_statistics_analysis"
            name="游늵 An치lisis"
